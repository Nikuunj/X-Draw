{
  "name": "draw-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:x-draw": "cd ./apps/x-draw/ && pnpm run start",
    "start:http": "cd ./apps/http-backend/ && pnpm run start",
    "start:ws": "cd ./apps/ws-backend/ && pnpm run start",
    "start:worker": "cd ./apps/worker/ && pnpm run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
